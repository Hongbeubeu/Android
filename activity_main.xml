<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray"
        android:text="Calculator"
        android:textSize="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:text="0"
        android:gravity="center_vertical|right"
        android:textSize="100dp"
        android:layout_marginBottom="40px"
        android:layout_above='@id/CE'
        android:layout_below="@id/header"/>
    <Button
        android:id="@+id/equal"
        android:text="="
        android:layout_marginRight="20px"
        android:layout_width="245px"
        android:layout_height="200px"
        android:textSize="70px"
        android:layout_alignParentRight='true'
        android:layout_alignParentBottom='true'
        />
    <Button
        android:id="@+id/dot"
        android:text="."
        android:layout_width="245px"
        android:layout_height="200px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/equal'
        android:layout_alignBottom='@id/equal'
        android:layout_alignTop='@id/equal'/>
    <Button
        android:id="@+id/number0"
        android:text="0"
        android:layout_width="245px"
        android:layout_height="200px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/dot'
        android:layout_alignBottom='@id/dot'
        android:layout_alignTop='@id/dot'/>
    <Button
        android:id="@+id/sign"
        android:text="+/-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/number0'
        android:layout_alignTop='@id/number0'
        android:layout_alignBottom='@id/number0'
        android:layout_alignParentLeft='true'/>
    <Button
        android:id="@+id/plus"
        android:text="+"
        android:layout_marginRight="20px"
        android:layout_width="245px"
        android:layout_height="200px"
        android:textSize="70px"
        android:layout_above='@id/equal'
        android:layout_alignParentRight='true' />
    <Button
        android:id="@+id/number3"
        android:text="3"
        android:layout_width="245px"
        android:layout_height="200px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/plus'
        android:layout_alignBottom='@id/plus'
        android:layout_alignTop='@id/plus'/>
    <Button
        android:id="@+id/number2"
        android:text="2"
        android:layout_width="245px"
        android:layout_height="200px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/number3'
        android:layout_alignBottom='@id/plus'
        android:layout_alignTop='@id/number3'/>
    <Button
        android:id="@+id/number1"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/number2'
        android:layout_alignTop='@id/number2'
        android:layout_alignBottom='@id/plus'
        android:layout_alignParentLeft='true'/>
    <Button
        android:id="@+id/sub"
        android:text="-"
        android:layout_marginRight="20px"
        android:layout_width="245px"
        android:layout_height="200px"
        android:textSize="70px"
        android:layout_above='@id/plus'
        android:layout_alignParentRight='true' />
    <Button
        android:id="@+id/number6"
        android:text="6"
        android:layout_width="245px"
        android:layout_height="200px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/sub'
        android:layout_alignTop='@id/sub'
        android:layout_alignBottom='@id/sub'/>
    <Button
        android:id="@+id/number5"
        android:text="5"
        android:layout_width="245px"
        android:layout_height="200px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/number6'
        android:layout_alignTop='@id/number6'
        android:layout_alignBottom='@id/sub'/>
    <Button
        android:id="@+id/number4"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/number5'
        android:layout_alignTop='@id/number5'
        android:layout_alignBottom='@id/sub'
        android:layout_alignParentLeft='true'/>
    <Button
        android:id="@+id/mul"
        android:text="x"
        android:layout_marginRight="20px"
        android:layout_width="245px"
        android:layout_height="200px"
        android:textSize="70px"
        android:layout_above='@id/sub'
        android:layout_alignParentRight='true' />
    <Button
        android:id="@+id/number9"
        android:text="9"
        android:layout_width="245px"
        android:layout_height="200px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/mul'
        android:layout_alignBottom='@id/mul'
        android:layout_alignTop='@id/mul'/>
    <Button
        android:id="@+id/number8"
        android:text="8"
        android:layout_width="245px"
        android:layout_height="200px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/number9'
        android:layout_alignBottom='@id/mul'
        android:layout_alignTop='@id/number9'/>
    <Button
        android:id="@+id/number7"
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/number8'
        android:layout_alignTop='@id/number8'
        android:layout_alignBottom='@id/mul'
        android:layout_alignParentLeft='true'/>
    <Button
        android:id="@+id/div"
        android:text="/"
        android:layout_marginRight="20px"
        android:layout_width="245px"
        android:layout_height="200px"
        android:textSize="70px"
        android:layout_above='@id/mul'
        android:layout_alignParentRight='true' />
    <Button
        android:id="@+id/BS"
        android:text="BS"
        android:layout_width="245px"
        android:layout_height="200px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/div'
        android:layout_alignBottom='@id/div'
        android:layout_alignTop='@id/div'/>
    <Button
        android:id="@+id/C"
        android:text="C"
        android:layout_width="245px"
        android:layout_height="200px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/BS'
        android:layout_alignBottom='@id/div'
        android:layout_alignTop='@id/BS'/>
    <Button
        android:id="@+id/CE"
        android:text="CE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/C'
        android:layout_alignTop='@id/C'
        android:layout_alignBottom='@id/div'
        android:layout_alignParentLeft='true'/>
</RelativeLayout>